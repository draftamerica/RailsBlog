<p id="notice"><%= notice %></p>

<p>
  <strong><%= @post.title %> <em>(written by: <%= "#{@post.user.first_name} #{@post.user.first_name}" %>)</em></strong>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<% @post.comments.each do |comment| %>
    <%= comment.content %> by: comment.user.first_name
<% end %>

